datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id             Int      @id @default(autoincrement())
  firstname      String
  phone          String   @unique
  password       String
  role           Role     @default(USER)
  jwt            String? 
  otpCode        String?  
  otpExpiresAt   DateTime?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}


model Guest {
  id        Int      @id @default(autoincrement())
  guestId   String   @unique
  createdAt DateTime @default(now())
}
enum Role {
  USER
  ADMIN
}