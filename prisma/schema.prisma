
datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id             Int      @id @default(autoincrement())
  firstname      String
  phone          String   @unique
  password       String
  email String? @unique
  totalMessage   Int       @default(0)
  report         Int       @default(0)
  status         Status    @default(Waiting)
  profileImage   String?
  ticketsSupport Int?
  isVerify       Boolean @default(false)
  userRate       Int?
  changephone    String? @unique
  role           Role     @default(USER)
  jwt            String? 
  otpCode        String?  
  otpExpiresAt   DateTime?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  tickets Ticket[]
  Message Message[]
}

model Ticket {
  id        Int       @id @default(autoincrement())
  title     String
  description String?
  userId    Int
  messages  Message[]
  user      User      @relation(fields: [userId], references: [id])
  status    Status    @default(Waiting)
  priority  Priority  @default(NORMAL)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}
model Message {
  id        Int      @id @default(autoincrement())
  ticketId  Int
  ticket    Ticket   @relation(fields: [ticketId], references: [id])
  content   String
  userId    Int
  user      User   @relation(fields: [userId] , references: [id])
  createdAt DateTime @default(now())
}

model Game {
  id  Int @id @default(autoincrement())
  firstthem String
  secondthem String
  League League @default(Acup)
  step String
  data DateTime
  time DateTime
  status GameStatus @default(live)
  description String
}

model Blog {
  id        Int      @id @default(autoincrement())
  title String @unique
  profile String
  img String @unique
  category String  @unique
  summary String
  description String
}

model Guest {
  id        Int      @id @default(autoincrement())
  guestId   String   @unique
  createdAt DateTime @default(now())
}
enum Role {
  USER
  ADMIN
}
enum Status {
  Open
  Waiting
  Approved
  Blocked
}

enum GameStatus {
  live
  down
  Scheduled
}
enum League {
  Dcup
  Tcup
  Acup
}
enum Priority {
  NORMAL
  URGENT
  LOW
  HIGH  
}
